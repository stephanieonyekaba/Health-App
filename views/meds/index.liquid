{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">My meds</h2>
    <!-- BUTTON TO CREATE A NEW MED -->
    <a href="/med/new"button type="button" class="btn btn-primary">Add new </button></a>
    <div class="row">
        
        {% for med in meds %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ med.name }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Taken?: {{ med.taken }}
                </h5>
                <p class="card-text">
                    
                    Notes: {{ med.notes }}
                </p>
                <p class="card-text">
                    Dose: {{ med.dose }}
                </p>
                <a href="/examples/{{ med.id }}" class="btn btn-info">
                    View {{ med.name }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}