{% layout 'layout.liquid' %}
{% block content %}
<div class="row"></div>
<div class="container-md">
<div class="card" style="width: 50rem;">
<h5 class="card-header">{{ med.date }}</h5>
<div class="card-body">
    <article>
        <h2>
            {{ med.name }} -
            {% if med.taken %}
            PM 
            {% else %}
            AM
            {%endif%}
        </h2>
        <h5>Dose: {{ med.dose }} mg</h5>
        <h6>Notes: {{ med.notes }}</h6>
        {% if med.owner == userId %}
        <div class="btn-group">

            <a href="/med/{{ med.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/med/{{ med.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
</div>
</div>
{% endblock %}

