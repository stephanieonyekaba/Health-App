{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/examples" method="POST">
        <fieldset>
            <legend>Edit Entry</legend>
            <label class="form-label">Drug: </label>
            <input 
                type="text" 
                name="name" 
                placeholder="{{ example.name }}"
                value="{{ example.name }}"
                class="form-control"
            >
            <label class="form-label">Notes:</label>
            <input 
                type="text" 
                name="notes" 
                placeholder="{{ example.notes }}" 
                value="{{ example.notes }}" 
                class="form-control"
            >
            <label class="form-label">Dose:</label>
            <input 
                type="number" 
                name="dose"
                value="{{ example.dose }}"
                class="form-control"
            >
            <label class="form-label">Taken:</label>
            <input 
                type="checkbox" 
                name="taken" 
                class="form-check-input"
                {% if example.taken %}
                    checked
                {% endif %}
            >
        </fieldset>
        <input type="submit" value="Edit Example" class="btn btn-success">
    </form>
</div>
{% endblock %}