{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ example.name }} -
            {% if example.taken %}
            taken
            {% else %}
            Not taken
            {%endif%}
        </h2>
        <h3>Dose: {{ example.dose }}</h3>
        <h6>Notes: {{ example.notes }}</h6>
        {% if example.owner == userId %}
        <div class="btn-group">

            <a href="/examples/{{ example.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/examples/{{ example.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}

